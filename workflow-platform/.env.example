# Application Configuration
DEBUG=true
APP_NAME="Workflow Platform"
APP_VERSION="1.0.0"

# Database Configuration
# PostgreSQL for production/development
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/workflow_platform
# SQLite for testing (uncomment below for tests)
# DATABASE_URL=sqlite+aiosqlite:///./test.db
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Authentication Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security Settings
BCRYPT_ROUNDS=12

# CORS Settings (uncomment and modify as needed)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME="Workflow Platform"

# Development/Testing Settings
# Set to true to use test email backend (prints to console)
EMAIL_BACKEND_TYPE=smtp
# EMAIL_BACKEND_TYPE=console  # Use for development

# API Settings
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
SECRET_KEY=your-django-secret-key-if-needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json